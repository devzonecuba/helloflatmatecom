{% extends 'config.html.twig' %}

{% block title %}Cama index{% endblock %}

{% block body %}
    <h1>Cama index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipocama</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cama in camas %}
            <tr>
                <td>{{ cama.id }}</td>
                <td>{{ cama.tipocama }}</td>
                <td>
                    <a href="{{ path('cama_show', {'id': cama.id}) }}">show</a>
                    <a href="{{ path('cama_edit', {'id': cama.id}) }}">edit</a>
                </td>
            </tr>
